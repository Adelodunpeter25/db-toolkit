{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DB Toolkit",
  "mainBinaryName": "DB Toolkit",
  "version": "0.1.0",
  "identifier": "com.dbtoolkit.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build"
  },
  "app": {
    "windows": [
      {
        "title": "DB Toolkit",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Peter Adelodun",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Modern database management tool",
    "longDescription": "A modern, cross-platform desktop database management application."
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Adelodunpeter25/db-toolkit/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": ""
    }
  }
}
